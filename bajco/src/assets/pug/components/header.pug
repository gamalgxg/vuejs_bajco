              //- notification dropdown  
              li.onhover-dropdown
                  .notification-box
                    i(data-feather='bell')
                    span.badge.badge-pill.badge-primary 4
                  .notification-dropdown.onhover-show-div
                      .m-3
                        a.btn.btn-dark.w-100(href="email_inbox.html") You have 4 notifications
                      ul.border-top
                        li
                          p.mb-0.ps-4.p-relative
                            a(href="to-do.html")
