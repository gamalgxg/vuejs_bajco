// Page Header Start
.page-main-header
  .main-header-right.row.m-0
      .main-header-left
          .logo-wrapper
              a(href='index.html')
                  img.img-fluid(src='../assets/images/logo/logo.png', alt='')
      .toggle-sidebar
        i.status_toggle.middle(data-feather='align-center')#sidebar-toggle
